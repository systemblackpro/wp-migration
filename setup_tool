#!/bin/bash

echo "[INFO] Clonando repositorio..."

read -r -p "Ingresa el nombre del cPanel (ej: dragon): " name_cpanel

echo "cPanel actual: $name_cpanel"

read -r -p "Ingresa el nombre del dominio (ej: midominio.com): " dominio

git clone https://github.com/systemblackpro/wp-migration.git

cd "/home/$name_cpanel/$dominio/wp-migration" || {
    echo "[ERROR] No se pudo acceder al directorio"
    exit 1
}

echo "Directorio actual:"
pwd

